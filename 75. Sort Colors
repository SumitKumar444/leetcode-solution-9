class Solution {
    public void sortColors(int[] nums) {
        int mid=0,low=0;
        int n=nums.length;
        int high=n-1;
        //BY Using Dutch National Flag Algo
        
        while(mid<=high)
        {
            if(nums[mid]==0){
                int temp=nums[mid];
                nums[mid]=nums[low];
                nums[low]=temp;
                mid++;
                low++;
            }
            else if(nums[mid]==1){
                mid++;
            }
            else{
                int temp=nums[mid];
                nums[mid]=nums[high];
                nums[high]=temp;
                high--;
            }
        }
    }
}
