class Solution {
    public String truncateSentence(String s, int k) {
        String[] arr=s.split(" ");
        StringBuilder S=new StringBuilder();
        for(int i=0;i<k-1;i++)
        {
            S.append(arr[i]).append(" ");
        }
        S.append(arr[k-1]);
        return S.toString();
    }
}
